extends layout

block head

block content
  
  div.ui.middle.aligned.center.aligned.grid
    div.column
      h2.ui.teal.image.header
        img.image(src='/images/monkey.png')
        div.content
          Log in to your account
      form.ui.large.form
        div.ui.stacked.segment
          div.field
            div.ui.left.icon.input
              i.user.icon
              input(type="text", name="username", placeholder="Unix username")
          div.field
            div.ui.left.icon.input
              i.lock.icon
              input(type="password", name="password", placeholder="Signature")
          div.ui.fluid.large.teal.submit.button
            Log In
        div.ui.error.message
      div.ui.message
        Hello world
      
  
  div.loginform
    img.logo(src="/images/monkey.png")
    p.help Run this command to create a signature, and copy/paste as your password
    pre echo "ClearCollateral" | openssl pkeyutl -sign -inkey ~/.ssh/id_rsa | base64 
    p.note Note: if your are not using the default SSH identity you will need to substitute your identity file (private key) for the id_rsa in the above command
    form.form-signin(action="/login", method="post", id="loginform")
      input#username.input-block-level(type="text", name="username", placeholder="Unix username")
      input#password.input-block-level(type="password", name="password", placeholder="Signature")
      input(type="submit", class="btn btn-primary btn-block btn-large", value="Log In")
    