extends layout

block head

block content
  if isAdmin
    a(href='/users') Admin
  div.keys
    h1 SSH Key Management
    table
      thead
        tr
          th Type
          th Key
          th Label
          th
          th
      tbody
        each item in keys
          tr
            td #{ item.type }
            td #{ item.key }
            td #{ item.label }
            td
              form.form-editkey(action="/editkey", method="post", id="editform")
                button(type="submit", class="btn btn-primary", value="Edit Key") Edit Key
                  span.glyphicon.glyphicon-edit.icon-button
            td
              span.glyphicon.glyphicon-trash
    form.form-addkey(action="/addkey", method="post", id="addform")
      button(type="submit", class="btn btn-primary", value="Add Key") Add Key
        span.glyphicon.glyphicon-plus.icon-button
        
    


